# Captcha Configuration
NOCAPTCHA_SECRET=your_recaptcha_secret
NOCAPTCHA_SITEKEY=your_recaptcha_sitekey

# AWS Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
