# Production Environment Configuration for meetMyTech
# Copy this to .env on your AWS server and update the values

APP_NAME=meetMyTech
APP_ENV=production
APP_KEY=base64:VqqC8mMeZZ6j10+X9UR6gwxo3f9+z88iDfSsxLDnJkA=
APP_DEBUG=false
APP_URL=https://meetmytech.com
APP_DOMAIN=meetmytech.com
SESSION_DOMAIN=.meetmytech.com

# SSL Configuration for Production
FORCE_HTTPS=true
SESSION_SECURE_COOKIE=true
ASSET_URL=https://meetmytech.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (Update with your production values)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=meetmytech_production
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (Update with your production mail settings)
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@meetmytech.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@meetmytech.com
